{
  "info": {
    "name": "BAZNAS Batam API",
    "description": "Collection lengkap untuk testing semua endpoint BAZNAS Batam Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:3000/api" },
    { "key": "token", "value": "" }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [{ "key": "token", "value": "{{token}}" }]
  },
  "item": [
    {
      "name": "üîê Auth",
      "item": [
        {
          "name": "Login (superadmin)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var json = pm.response.json();",
                  "    pm.collectionVariables.set('token', json.data.token);",
                  "    pm.test('Token tersimpan otomatis', function() {",
                  "        pm.expect(json.data.token).to.be.a('string');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "url": "{{base_url}}/auth/login",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"superadmin\",\n  \"password\": \"superadmin123\"\n}"
            }
          }
        },
        {
          "name": "Login (body kosong ‚Üí 400)",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/auth/login",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{}" }
          }
        },
        {
          "name": "Login (password salah ‚Üí 401)",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/auth/login",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"superadmin\",\n  \"password\": \"wrongpassword\"\n}"
            }
          }
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/auth/me",
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{token}}" }] }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/auth/logout",
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{token}}" }] }
          }
        }
      ]
    },
    {
      "name": "üë§ Users (superadmin only)",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/users?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["users"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" },
                { "key": "role", "value": "superadmin", "disabled": true },
                { "key": "q", "value": "", "disabled": true }
              ]
            },
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{token}}" }] }
          }
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/users/1",
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{token}}" }] }
          }
        },
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/users",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{token}}" }] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"pelayanan1\",\n  \"password\": \"Pass1234!\",\n  \"nama\": \"Staff Pelayanan\",\n  \"role\": \"pelayanan\"\n}"
            }
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "url": "{{base_url}}/users/2",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{token}}" }] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nama\": \"Staff Pelayanan Updated\"\n}"
            }
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "url": "{{base_url}}/users/2",
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{token}}" }] }
          }
        }
      ]
    },
    {
      "name": "üìã Mustahiq",
      "item": [
        {
          "name": "Get All Mustahiq (dengan filter)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/mustahiq?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["mustahiq"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" },
                { "key": "q", "value": "", "disabled": true, "description": "Cari by nama/NIK/NRM/no_reg_bpp" },
                { "key": "asnaf", "value": "Fakir", "disabled": true },
                { "key": "kategori", "value": "Individu", "disabled": true },
                { "key": "jenis_program", "value": "", "disabled": true },
                { "key": "status", "value": "active", "disabled": true },
                { "key": "kelurahan", "value": "Tembesi", "disabled": true },
                { "key": "kecamatan", "value": "Batu Aji", "disabled": true }
              ]
            },
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{token}}" }] }
          }
        },
        {
          "name": "Get Mustahiq by ID",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/mustahiq/1",
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{token}}" }] }
          }
        },
        {
          "name": "Get Riwayat Distribusi Mustahiq",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/mustahiq/1/riwayat?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["mustahiq", "1", "riwayat"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" },
                { "key": "tahun", "value": "2026", "disabled": true },
                { "key": "bulan", "value": "Januari", "disabled": true }
              ]
            },
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{token}}" }] }
          }
        },
        {
          "name": "Create Mustahiq",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/mustahiq",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{token}}" }] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nrm\": \"NRM-001\",\n  \"nik\": \"2171012345678901\",\n  \"nama\": \"Ahmad Ibrahim\",\n  \"no_hp\": \"08123456789\",\n  \"alamat\": \"Jl. Engku Putri No. 10\",\n  \"kelurahan\": \"Tembesi\",\n  \"kecamatan\": \"Batu Aji\",\n  \"kategori_mustahiq\": \"Individu\",\n  \"jenis_program\": \"B. Biaya Hidup\",\n  \"asnaf\": \"Fakir\",\n  \"registered_date\": \"2026-02-23\",\n  \"keterangan\": \"Data mustahiq baru\"\n}"
            }
          }
        },
        {
          "name": "Create Mustahiq (body kosong ‚Üí 400)",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/mustahiq",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{token}}" }] },
            "body": { "mode": "raw", "raw": "{}" }
          }
        },
        {
          "name": "Update Mustahiq",
          "request": {
            "method": "PUT",
            "url": "{{base_url}}/mustahiq/1",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{token}}" }] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nama\": \"Ahmad Ibrahim Updated\",\n  \"no_hp\": \"08198765432\",\n  \"keterangan\": \"Data diperbarui\"\n}"
            }
          }
        },
        {
          "name": "Update Mustahiq Status",
          "request": {
            "method": "PUT",
            "url": "{{base_url}}/mustahiq/1/status",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{token}}" }] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"blacklist\"\n}"
            }
          }
        },
        {
          "name": "Update Status (invalid ‚Üí 400)",
          "request": {
            "method": "PUT",
            "url": "{{base_url}}/mustahiq/1/status",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{token}}" }] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"invalid_status\"\n}"
            }
          }
        },
        {
          "name": "Delete Mustahiq (superadmin only)",
          "request": {
            "method": "DELETE",
            "url": "{{base_url}}/mustahiq/1",
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{token}}" }] }
          }
        }
      ]
    },
    {
      "name": "üìä Laporan",
      "item": [
        {
          "name": "Export Mustahiq ke Excel",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/laporan/mustahiq/export",
              "host": ["{{base_url}}"],
              "path": ["laporan", "mustahiq", "export"],
              "query": [
                { "key": "asnaf", "value": "Fakir", "disabled": true },
                { "key": "status", "value": "active", "disabled": true },
                { "key": "kecamatan", "value": "Batu Aji", "disabled": true }
              ]
            },
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{token}}" }] }
          }
        }
      ]
    },
    {
      "name": "üè• System",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/health"
          }
        }
      ]
    }
  ]
}
